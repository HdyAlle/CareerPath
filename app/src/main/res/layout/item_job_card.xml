<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header with Company Logo and Bookmark -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <!-- Company Logo -->
            <ImageView
                android:id="@+id/iv_company_logo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_google"
                android:layout_marginEnd="12dp"
                android:contentDescription="Company logo" />

            <!-- Spacer -->
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- Bookmark Icon - PERBAIKAN: Touch target 48dp -->
            <ImageView
                android:id="@+id/iv_bookmark"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_bookmark_outline"
                android:padding="12dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Bookmark this job"
                app:tint="#CCCCCC" />

        </LinearLayout>

        <!-- Job Title -->
        <TextView
            android:id="@+id/tv_job_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UI/UX Designer"
            android:textSize="20sp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Company and Location -->
        <TextView
            android:id="@+id/tv_company_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Google inc â€¢ California, USA"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="16dp" />

        <!-- Tags Container -->
        <LinearLayout
            android:id="@+id/ll_tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <!-- Design Tag -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Design"
                android:textSize="12sp"
                android:textColor="#666666"
                android:background="@drawable/tag_background"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:layout_marginEnd="8dp" />

            <!-- Full time Tag -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full time"
                android:textSize="12sp"
                android:textColor="#666666"
                android:background="@drawable/tag_background"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:layout_marginEnd="8dp" />

            <!-- Senior designer Tag -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Senior designer"
                android:textSize="12sp"
                android:textColor="#666666"
                android:background="@drawable/tag_background"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp" />

        </LinearLayout>

        <!-- Footer with Time and Salary -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Time Posted -->
            <TextView
                android:id="@+id/tv_posted_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30 minute ago"
                android:textSize="12sp"
                android:textColor="#999999" />

            <!-- Spacer -->
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- Salary -->
            <TextView
                android:id="@+id/tv_salary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$15K /Mo"
                android:textSize="16sp"
                android:textColor="#333333"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>