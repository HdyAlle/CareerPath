<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_success_dialog"
    android:padding="32dp"
    android:gravity="center">

    <!-- ✅ Success Icon Section - Fixed untuk User Arsieruuu - UTC: 17:08:53 -->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp">

        <!-- Main Success Circle -->
        <View
            android:id="@+id/success_circle"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/bg_success_circle"
            android:layout_gravity="center" />

        <!-- Checkmark Icon -->
        <ImageView
            android:id="@+id/iv_checkmark"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_checkmark"
            android:layout_gravity="center" />

        <!-- ✅ Simple Celebration Particles -->
        <View
            android:id="@+id/particle_1"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/bg_particle_red"
            android:layout_gravity="top|start"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp" />

        <View
            android:id="@+id/particle_2"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/bg_particle_orange"
            android:layout_gravity="top|end"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="15dp" />

        <View
            android:id="@+id/particle_3"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/bg_particle_blue"
            android:layout_gravity="bottom|start"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="25dp" />

        <View
            android:id="@+id/particle_4"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:background="@drawable/bg_particle_pink"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="30dp" />

    </FrameLayout>

    <!-- ✅ Success Title untuk User Arsieruuu - Current: 17:08:53 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Congrats your job submitted"
        android:textColor="@color/text_primary"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- ✅ Success Message -->
    <TextView
        android:id="@+id/tv_success_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You currently have no incoming messages\nthank you"
        android:textColor="@color/text_secondary"
        android:textSize="14sp"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:layout_marginBottom="48dp" />

    <!-- ✅ Action Buttons Row - Fixed namespace error -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <!-- Home Button -->
        <LinearLayout
            android:id="@+id/btn_home"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_dialog_button"
            android:gravity="center"
            android:layout_marginEnd="20dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_home"
                android:contentDescription="Go to Home" />
        </LinearLayout>

        <!-- Notification Button -->
        <LinearLayout
            android:id="@+id/btn_notification"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_dialog_button"
            android:gravity="center"
            android:layout_marginEnd="20dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_notification"
                android:contentDescription="Notifications" />
        </LinearLayout>

        <!-- Add More Button (Active) -->
        <LinearLayout
            android:id="@+id/btn_add_more"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_dialog_button_active"
            android:gravity="center"
            android:layout_marginEnd="20dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_add"
                android:contentDescription="Add More Jobs" />
        </LinearLayout>

        <!-- Message Button -->
        <LinearLayout
            android:id="@+id/btn_message"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_dialog_button"
            android:gravity="center"
            android:layout_marginEnd="20dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_message"
                android:contentDescription="Messages" />
        </LinearLayout>

        <!-- Bookmark Button -->
        <LinearLayout
            android:id="@+id/btn_bookmark"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_dialog_button"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_bookmark"
                android:contentDescription="Bookmarks" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>