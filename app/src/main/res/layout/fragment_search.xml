<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- Header with Search -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="16dp">

        <!-- Search Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search"
            android:textSize="24sp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Search Bar - PERBAIKAN: Tinggi minimal 48dp untuk touch target -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:background="@drawable/search_background"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_search"
                android:layout_marginEnd="12dp"
                android:contentDescription="Search icon"
                app:tint="#999999" />

            <!-- PERBAIKAN: Touch target minimal 48dp -->
            <EditText
                android:id="@+id/et_search"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:hint="Design"
                android:textSize="16sp"
                android:textColorHint="#999999"
                android:background="@android:color/transparent"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:minHeight="48dp"
                android:gravity="center_vertical" />

        </LinearLayout>

        <!-- Location -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_location"
                android:layout_marginEnd="8dp"
                android:contentDescription="Location icon"
                app:tint="#FF6B35" />

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="California, USA"
                android:textSize="14sp"
                android:textColor="#666666" />

        </LinearLayout>

        <!-- Filter Chips -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Filter Icon -->
            <!-- Filter Icon - tambahkan ID -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_filter_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="12dp"
                app:cardBackgroundColor="@color/blue_active"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_filter"
                    android:contentDescription="Filter"
                    app:tint="@android:color/white" />

            </androidx.cardview.widget.CardView>

            <!-- Senior Designer Chip -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Senior designer"
                android:textSize="14sp"
                android:textColor="#666666"
                android:background="@drawable/chip_background"
                android:gravity="center"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginEnd="8dp" />

            <!-- Designer Chip -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Designer"
                android:textSize="14sp"
                android:textColor="#666666"
                android:background="@drawable/chip_background"
                android:gravity="center"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginEnd="8dp" />

            <!-- Full-time Chip -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Full-time"
                android:textSize="14sp"
                android:textColor="#666666"
                android:background="@drawable/chip_background"
                android:gravity="center"
                android:paddingStart="16dp"
                android:paddingEnd="16dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- ScrollView for Job Cards -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Job Card 1 - PERBAIKAN: Gunakan layout yang lengkap tanpa include -->
            <androidx.cardview.widget.CardView
                android:id="@+id/job_card_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Header with Company Logo and Bookmark -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <!-- Google Logo -->
                        <ImageView
                            android:id="@+id/iv_company_logo_1"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_google"
                            android:layout_marginEnd="12dp"
                            android:contentDescription="Google logo" />

                        <!-- Spacer -->
                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                        <!-- Bookmark Icon -->
                        <ImageView
                            android:id="@+id/iv_bookmark_1"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_bookmark_outline"
                            android:padding="12dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="Bookmark job"
                            app:tint="#CCCCCC" />

                    </LinearLayout>

                    <!-- Job Title -->
                    <TextView
                        android:id="@+id/tv_job_title_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="UI/UX Designer"
                        android:textSize="20sp"
                        android:textColor="#333333"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <!-- Company and Location -->
                    <TextView
                        android:id="@+id/tv_company_info_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Google inc â€¢ California, USA"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="16dp" />

                    <!-- Tags Container -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <!-- Design Tag -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Design"
                            android:textSize="12sp"
                            android:textColor="#666666"
                            android:background="@drawable/tag_background"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp"
                            android:layout_marginEnd="8dp" />

                        <!-- Full time Tag -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Full time"
                            android:textSize="12sp"
                            android:textColor="#666666"
                            android:background="@drawable/tag_background"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp"
                            android:layout_marginEnd="8dp" />

                        <!-- Senior designer Tag -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Senior designer"
                            android:textSize="12sp"
                            android:textColor="#666666"
                            android:background="@drawable/tag_background"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp" />

                    </LinearLayout>

                    <!-- Footer with Time and Salary -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <!-- Time Posted -->
                        <TextView
                            android:id="@+id/tv_posted_time_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="30 minute ago"
                            android:textSize="12sp"
                            android:textColor="#999999" />

                        <!-- Spacer -->
                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                        <!-- Salary -->
                        <TextView
                            android:id="@+id/tv_salary_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$15K /Mo"
                            android:textSize="16sp"
                            android:textColor="#333333"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>