<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9FB"
    tools:context=".fragments.SearchFragment">

    <!-- Main content in ScrollView for scrollable content -->
    <ScrollView
        android:id="@+id/search_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="0dp">

            <!-- Top spacer for rounded corners effect -->
            <View
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:background="@drawable/bg_top_rounded"/>

            <!-- Search Fields Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingTop="8dp">

                <!-- Search Input with icon -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_search"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:layout_marginTop="16dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_search"
                        android:contentDescription="@string/search"
                        app:tint="#B0B4C2" />

                    <EditText
                        android:id="@+id/search_edittext"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:hint="Design"
                        android:textColor="#222"
                        android:textSize="14sp"
                        android:paddingStart="12dp"
                        android:paddingEnd="4dp"
                        android:inputType="text"
                        android:singleLine="true"/>
                </LinearLayout>

                <!-- Location Input with icon -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_search"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:layout_marginTop="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_location"
                        app:tint="#FF9800" />

                    <EditText
                        android:id="@+id/location_edittext"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:hint="California, USA"
                        android:textColor="#222"
                        android:textSize="14sp"
                        android:paddingStart="12dp"
                        android:paddingEnd="4dp"
                        android:inputType="text"
                        android:singleLine="true"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Filter tags section -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                android:scrollbars="none"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp">

                    <!-- Filter Button -->
                    <ImageButton
                        android:id="@+id/filter_button"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_filter_selected"
                        android:src="@drawable/ic_filter"
                        android:contentDescription="@string/filter"
                        android:scaleType="center"
                        android:layout_marginEnd="10dp"
                        app:tint="#0056D6" />

                    <!-- Job type filter buttons -->
                    <Button
                        android:id="@+id/btn_senior_designer"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Senior designer"
                        android:background="@drawable/bg_tag_selected"
                        android:backgroundTint="@null"
                        android:textColor="#0056D6"
                        android:textSize="14sp"
                        android:layout_marginEnd="8dp"
                        android:textAllCaps="false"/>

                    <Button
                        android:id="@+id/btn_designer"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Designer"
                        android:background="@drawable/bg_tag"
                        android:backgroundTint="@null"
                        android:textColor="#8E98A7"
                        android:textSize="14sp"
                        android:layout_marginEnd="8dp"
                        android:textAllCaps="false"/>

                    <Button
                        android:id="@+id/btn_full_time"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Full-time"
                        android:background="@drawable/bg_tag"
                        android:backgroundTint="@null"
                        android:textColor="#8E98A7"
                        android:textSize="14sp"
                        android:textAllCaps="false"/>
                </LinearLayout>
            </HorizontalScrollView>

            <!-- Job Card List -->
            <LinearLayout
                android:id="@+id/job_list_container"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingTop="6dp">

                <!-- Sample Job Card -->
                <include layout="@layout/item_job_card" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>