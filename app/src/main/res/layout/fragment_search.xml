<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9FB"
    tools:context=".fragments.SearchFragment">

    <!-- Main content in ScrollView for scrollable content -->
    <ScrollView
        android:id="@+id/search_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="0dp">

            <!-- Top spacer for rounded corners effect -->
            <View
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:background="@drawable/bg_top_rounded"/>

            <!-- Search Fields Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingTop="8dp">

                <!-- Search Input with icon -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_search"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:layout_marginTop="16dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_search"
                        android:contentDescription="@string/search"
                        app:tint="#B0B4C2" />

                    <EditText
                        android:id="@+id/search_edittext"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:hint="Design"
                        android:textColor="#222"
                        android:textSize="14sp"
                        android:paddingStart="12dp"
                        android:paddingEnd="4dp"
                        android:inputType="text"
                        android:singleLine="true"/>
                </LinearLayout>

                <!-- Location Input with icon -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_search"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:layout_marginTop="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_location"
                        app:tint="#FF9800" />

                    <EditText
                        android:id="@+id/location_edittext"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:hint="California, USA"
                        android:textColor="#222"
                        android:textSize="14sp"
                        android:paddingStart="12dp"
                        android:paddingEnd="4dp"
                        android:inputType="text"
                        android:singleLine="true"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Filter tags section -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                android:scrollbars="none"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp">

                    <!-- Filter Button -->
                    <ImageButton
                        android:id="@+id/filter_button"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_filter_selected"
                        android:src="@drawable/ic_filter"
                        android:contentDescription="@string/filter"
                        android:scaleType="center"
                        android:layout_marginEnd="10dp"
                        app:tint="#0056D6" />

                    <!-- Job type filter buttons -->
                    <Button
                        android:id="@+id/btn_senior_designer"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Senior designer"
                        android:background="@drawable/bg_tag_selected"
                        android:backgroundTint="@null"
                        android:textColor="#0056D6"
                        android:textSize="14sp"
                        android:layout_marginEnd="8dp"
                        android:textAllCaps="false"/>

                    <Button
                        android:id="@+id/btn_designer"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Designer"
                        android:background="@drawable/bg_tag"
                        android:backgroundTint="@null"
                        android:textColor="#8E98A7"
                        android:textSize="14sp"
                        android:layout_marginEnd="8dp"
                        android:textAllCaps="false"/>

                    <Button
                        android:id="@+id/btn_full_time"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Full-time"
                        android:background="@drawable/bg_tag"
                        android:backgroundTint="@null"
                        android:textColor="#8E98A7"
                        android:textSize="14sp"
                        android:textAllCaps="false"/>
                </LinearLayout>
            </HorizontalScrollView>

            <!-- Job Card List -->
            <LinearLayout
                android:id="@+id/job_list_container"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingTop="6dp">

                <!-- First Job Card -->
                <include layout="@layout/item_job_card" />
                
                <!-- Second Job Card - Microsoft -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/job_card_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="3dp"
                    android:layout_marginBottom="16dp"
                    android:backgroundTint="@android:color/white"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <!-- Header with company logo, job title, and bookmark -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <!-- Microsoft Logo placeholder -->
                            <TextView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:text="M"
                                android:textColor="@android:color/white"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:gravity="center"
                                android:background="@drawable/circle_light_blue_bg"
                                android:layout_gravity="center_vertical"/>

                            <!-- Job title and company info -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:layout_marginStart="12dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Product Designer"
                                    android:textStyle="bold"
                                    android:textColor="#222"
                                    android:textSize="16sp"/>
                                
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Microsoft • Seattle, USA"
                                    android:textColor="#8E98A7"
                                    android:textSize="13sp"
                                    android:layout_marginTop="2dp"/>
                            </LinearLayout>

                            <!-- Bookmark button -->
                            <ImageView
                                android:id="@+id/iv_bookmark_2"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_bookmark"
                                android:contentDescription="Bookmark"
                                android:clickable="true"
                                android:focusable="true"
                                android:background="?android:attr/selectableItemBackgroundBorderless"
                                android:padding="4dp"
                                app:tint="#B0B4C2" />
                        </LinearLayout>

                        <!-- Job tags section -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="14dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="28dp"
                                android:background="@drawable/bg_tag"
                                android:text="Design"
                                android:textColor="#8E98A7"
                                android:gravity="center"
                                android:paddingLeft="14dp"
                                android:paddingRight="14dp"
                                android:textSize="13sp"
                                android:layout_marginEnd="8dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="28dp"
                                android:background="@drawable/bg_tag"
                                android:text="Remote"
                                android:textColor="#8E98A7"
                                android:gravity="center"
                                android:paddingLeft="14dp"
                                android:paddingRight="14dp"
                                android:textSize="13sp"
                                android:layout_marginEnd="8dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="28dp"
                                android:background="@drawable/bg_tag"
                                android:text="Mid-level"
                                android:textColor="#8E98A7"
                                android:gravity="center"
                                android:paddingLeft="14dp"
                                android:paddingRight="14dp"
                                android:textSize="13sp"/>
                        </LinearLayout>

                        <!-- Bottom section with timestamp and salary -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="12dp"
                            android:gravity="center_vertical">

                            <!-- Timestamp -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2 hours ago"
                                android:textColor="#B0B4C2"
                                android:textSize="12sp"/>

                            <!-- Spacer -->
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"/>

                            <!-- Salary -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$18K"
                                android:textColor="#222"
                                android:textStyle="bold"
                                android:textSize="16sp"/>
                            
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="/Mo"
                                android:textColor="#B0B4C2"
                                android:textSize="12sp"
                                android:layout_marginStart="2dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>